{% for post in postslist | reverse %}
<article class="article-compact">
	<time class="article-compact__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("DD") }}</time>
	<h2 class="article-compact__title">
		<a href="{{ post.url }}">
			{{ post.data.title }}
		</a>
	</h2>
	<p class="article-compact__desc">{{ post.data.description }}</p>
</article>
{% endfor %}


